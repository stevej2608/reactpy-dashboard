{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://vscode-dev:82",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,

      // Chrome debugger address:
      // http://vscode-dev:82/_reactpy/js/src/index.js
      //
      // js/src/index.js

      "sourceMapPathOverrides": {
        "/_reactpy/*": "${workspaceFolder}/*",
        "\\workspace\\reactpy-dashboard\\_reactpy\\js\\src\\*" : "${workspaceFolder}/js/src/*",
        "/workspace/reactpy-dashboard/_reactpy/js/src/*" : "${workspaceFolder}/js/src/*" 
      },
      "internalConsoleOptions": "openOnSessionStart",

    },

    {
      "name": "1a. usage.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "usage.py",
      "args": [
        "runserver",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "env": {
        "REACTPY_DEBUG_MODE" : "1"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      // "serverReadyAction": {
      //   "pattern": "Uvicorn running on (.*)/",
      //   "uriFormat": "%s/",
      //   "action": "debugWithChrome"
      // }
    },
    {
      "name": "1b. app_main_router_test.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "app_main_router_test.py",
      "args": [
        "runserver",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      // "serverReadyAction": {
      //   "pattern": "Running on (.*)/",
      //   "uriFormat": "%s",
      //   "action": "debugWithChrome",
      //   "killOnServerStop": true
      // }
    },
    {
      "name": "2a. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "-sv",
        // "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
  ]
}