{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1a. run_dashboard.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "run_dashboard.py",
      "env": {
        "REACTPY_DEBUG_MODE": "1"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on\\s+(https?://\\S+)",
        "uriFormat": "%s/sign-up",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },
    {
      "name": "1b. examples/router_test.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "examples.router_test",
      "args": [
        "runserver"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
    },
    {
      "name": "1c. examples/form_login.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "examples.form_login",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },
    {
      "name": "1d. examples/form_complex.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "examples.form_complex",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },
    {
      "name": "1e. hello.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "examples.hello",
      "env": {
        "REACTPY_DEBUG_MODE": "1"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on\\s+(https?://\\S+)",
        "uriFormat": "%s/sign-in",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },
    {
      "name": "1z. Python: Current File",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${currentFile}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
    },
    {
      "name": "2a. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "-sv",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "2b. PyTest (test_login_form.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_login_form.py",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "2c. PyTest (test_complex_form.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_complex_form.py",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "2c. PyTest (props.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_props.py"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "3.a Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://vscode-dev:82",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      // Chrome debugger address:
      // http://vscode-dev:82/_reactpy/js/src/index.js
      //
      // js/src/index.js
      "sourceMapPathOverrides": {
        "/_reactpy/*": "${workspaceFolder}/*",
        "\\workspace\\reactpy-dashboard\\_reactpy\\js\\src\\*": "${workspaceFolder}/js/src/*",
        "/workspace/reactpy-dashboard/_reactpy/js/src/*": "${workspaceFolder}/js/src/*"
      },
      "internalConsoleOptions": "openOnSessionStart",
    },
  ]
}