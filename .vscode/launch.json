  "version": "0.2.0",
  "configurations": [
    {
      "name": "1. usage.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "usage.py",
      "args": ["runserver", "--port","3000"],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on http://127.0.0.1:8000(.*)",
        "uriFormat": "http://127.0.0.1:8000/%s",
        "action": "openExternally"
      }
    },
    {
      "name": "2a. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": ["-o log_cli=1","-sv", "--headed"],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

  ]
}