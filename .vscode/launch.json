  "version": "0.2.0",
  "configurations": [
    {
      "name": "1a. usage.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "usage.py",
      "args": [
        "runserver",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "env": {
        "REACTPY_DEBUG_MODE" : "1"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      // "serverReadyAction": {
      //   "pattern": "Uvicorn running on (.*)/",
      //   "uriFormat": "%s/",
      //   "action": "debugWithChrome"
      // }
    },
    {
      "name": "1b. examples/router_test.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "examples.router_test",
      "args": [
        "runserver",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
    },
    {
      "name": "1c. examples/form_login.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "examples.form_login",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on http://127.0.0.1:8000(.*)",
        "uriFormat": "http://127.0.0.1:8000/%s",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },

    {
      "name": "1d. examples/form_complex.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "examples.form_complex",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on http://127.0.0.1:8000(.*)",
        "uriFormat": "http://127.0.0.1:8000/%s",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },

    {
      "name": "1e. tmp/args_test.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "module": "tmp.args_test",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
    },
 

    {
      "name": "2a. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "-sv",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    
    {
      "name": "2b. PyTest (test_login_form.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_login_form.py",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

    {
      "name": "2c. PyTest (test_complex_form.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_complex_form.py",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

    {
      "name": "2c. PyTest (props.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_props.py"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },


    {
      "name": "3.a Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://vscode-dev:82",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,

      // Chrome debugger address:
      // http://vscode-dev:82/_reactpy/js/src/index.js
      //
      // js/src/index.js

      "sourceMapPathOverrides": {
        "/_reactpy/*": "${workspaceFolder}/*",
        "\\workspace\\reactpy-dashboard\\_reactpy\\js\\src\\*" : "${workspaceFolder}/js/src/*",
        "/workspace/reactpy-dashboard/_reactpy/js/src/*" : "${workspaceFolder}/js/src/*" 
      },
      "internalConsoleOptions": "openOnSessionStart",

    },


  ]
}