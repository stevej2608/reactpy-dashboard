  "version": "0.2.0",
  "configurations": [
    {
      "name": "1. usage.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "usage.py",
      "args": [
        "runserver",
        "--port",
        "3000"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      // "serverReadyAction": {
      //   "pattern": "Uvicorn running on (.*)/",
      //   "uriFormat": "%s/",
      //   "action": "debugWithChrome"
      // }
    },
    {
      "name": "1a. app_main.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "app_main.py",
     "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "2a. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "-sv",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
  ]
}